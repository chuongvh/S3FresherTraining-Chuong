
@using S3Train.Models;
@model IList<SliderItemViewModel>

<div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
    <ol class="carousel-indicators">
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                var activeClass = i == 0 ? "active" : string.Empty;

                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@activeClass"></li>
            }
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                var activeClass = i == 0 ? "active" : string.Empty;

                <div class="carousel-item @activeClass">
                    <img class="d-block img-fluid" src="@Model[i].ImagePath" alt="@Model[i].Title">
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>